---
layout: base.njk
show_intro: true
show_tag_nav: true
pagination:
  data: collections.tagList
  size: 1
  alias: currentTag
  addAllPagesToCollections: true
permalink: tags/{{ currentTag }}/
eleventyComputed:
  title: "标签：{{ currentTag }}"
---

{% set posts = (collections[currentTag] | default([])) | reverse %}

<section class="tag-posts">
  <h1 class="tag-title">{{ currentTag }}</h1>

  {% if posts | length %}
    <ul class="tag-post-list">
      {% for post in posts %}
        <li class="tag-post-item">
          <a href="{{ post.url }}">{{ post.data.title }}</a>
          <time datetime="{{ post.date | date('yyyy-MM-dd') }}">{{ post.date | date('yyyy-MM-dd') }}</time>
        </li>
      {% endfor %}
    </ul>
  {% else %}
    <p>当前标签下暂时没有文章。</p>
  {% endif %}
</section>
